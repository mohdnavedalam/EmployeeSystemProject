@model Employee

<h2>Delete an Employee</h2>

<h3 class="message">
    Warning: You are about to delete an employee record!
</h3>

<form asp-controller="EmployeeSystem" asp-action="Delete" method="post">
    <input type="hidden" asp-for="EmployeeID" />

    <table border="0">
        <tr>
            <td class="right">
                <label asp-for="EmployeeID"></label>
            </td>
            <td>@Model.EmployeeID</td>
        </tr>
        <tr>
            <td class="right">
                <label asp-for="FirstName"></label>
            </td>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <td class="right">
                <label asp-for="LastName"></label>
            </td>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <td class="right">
                <label asp-for="Title"></label>
            </td>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <td class="right">
                <label asp-for="BirthDate"></label>
            </td>
            <td>@Model.BirthDate.ToString("MMMM dd yyyy")</td>
        </tr>
        <tr>
            <td class="right">
                <label asp-for="HireDate"></label>
            </td>
            <td>@Model.HireDate.ToString("MMMM dd yyyy")</td>
        </tr>
        <tr>
            <td class="right">
                <label asp-for="Country"></label>
            </td>
            <td>@Model.Country</td>
        </tr>
        <tr>
            <td class="right">
                <label asp-for="Notes"></label>
            </td>
            <td>@Model.Notes</td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit">Delete</button>
            </td>
        </tr>
    </table>
</form>

